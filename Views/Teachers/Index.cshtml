@model IEnumerable<sms.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Teachers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
