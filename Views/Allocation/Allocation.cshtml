@{
    ViewBag.Title = "Allocation";
}

<h2>Allocation Page</h2>

<div>
    <!-- Button to navigate to the teacher subject allocation page -->
    <button type="button" id="teacherSubjectAllocationBtn" class="btn">Teacher Subject Allocation</button>
</div>

<div id="teacherSubjectAllocationContainer"></div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#teacherSubjectAllocationBtn').click(function () {
                // Load the teacher subject allocation page via AJAX
                $.ajax({
                    url: '@Url.Action("TeacherSubjectAllocation", "Allocation")',
                    type: 'GET',
                    success: function (response) {
                        // Display the teacher subject allocation page in the container div
                        $('#teacherSubjectAllocationContainer').html(response);
                    },
                    error: function () {
                        alert('An error occurred while loading the page.');
                    }
                });
            });
        });
    </script>
}
